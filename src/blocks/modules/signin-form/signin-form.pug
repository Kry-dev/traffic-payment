form#sign-in.form.form-sign
    .form-group.mb-5
        h2.form-sign-title Welcome Back!
    .form-group.mb-3
        input.form-control(
            id="signin_email",
            type="email",
            name="signin_email",
            required="required",
            placeholder="Email"
            )
    .form-group.mb-3
        input.form-control(
            id="signin_pass",
            type="password",
            required="required",
            placeholder="Create Password",
            name="signin_pass",
            value=""
            )

        span.fa.fa-fw.fa-eye.field-icon.toggle-password(toggle='#signin_pass')
    .form-group.mb-3
        a(href="#").forgot-link Forgot password?
    .form-group
        button#submit.btn.btn-danger.w-100.mt-3(type="submit") Sign In
